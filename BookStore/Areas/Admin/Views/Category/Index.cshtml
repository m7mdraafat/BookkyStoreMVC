@model List<Category>

<div class="container">
    <div class="card card-header-tabs mt-4">
        <div class="card-header">
            <div class="row pt-2 m-2 justify-content-between align-items-center">
                <div class="col-6">
                    <h2 class="text-uppercase text-primary-emphasis">
                        Category List
                    </h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-baby-blue btn-sm shadow-sm">
                        <i class="bi bi-plus-circle"></i> Add a New Category
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body" style="min-height: 710px; max-height: 800px;">
            <!-- Display current page information -->
            <div id="pageInfo" class="mb-3">
                Showing <span id="currentStart">1</span> to <span id="currentEnd">6</span> of <span id="totalCategories">0</span> categories
            </div>
            <div class="row pt-2 m-2 justify-content-start" id="categoryContainer">
                <!-- Category cards will be populated here dynamically -->
            </div>
            <div id="paginationCategoryNumbers" class="pagination bg-light shadow-none mt-3">
                <!-- Pagination controls will be populated here dynamically -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/category.js"></script> <!-- Reference to your JavaScript file -->
}
