@model List<Product>

<div class="container">
    <div class="card card-header-pills border-0 rounded shadow-lg mt-5" style="padding:4%">
        <div class="card-header bg-white">
            <div class="row pt-2 m-3 justify-content-between align-items-center">
                <div class="col-6">
                    <h2 class="text-uppercase text-primary">
                        Product List
                    </h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Product" asp-action="Upsert" class="btn bg-gradient btn-primary input-shadow shadow-sm">
                        <i class="bi bi-plus-circle"></i> Add a New Product
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Display current page information -->
            <div class="row justify-content-between pt-2 m-2">
                <div id="pageInfo" class="col-6 mt-3 px-4">
                    Showing <span id="currentStart">0</span> to <span id="currentEnd">0</span> of <span id="totalProducts">0</span> products
                </div>
                <div class="col-12 text-end col-md-3">
                    <input type="text" id="searchInput" class="form-control me-sm-2 input-shadow text-dark" placeholder="Search products..." />
                </div>
            </div>
            <div class="row pt-2 m-2 justify-content-start" id="productContainer">
                <!-- Category cards will be populated here dynamically -->
            </div>
            <div id="paginationNumbers" class="pagination shadow-none bg-white justify-content-end mx-3">
                <!-- Pagination controls will be populated here dynamically -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/category.js"></script> <!-- Reference to your JavaScript file -->
}
