@model int

<div class="container row pt-4">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment done successfully!</h1>
        Order Number is: @Model<br /><br />

        <img src="/Images/lawn_leaf.jpg" width="65%" />

        <div class="col-12 text-center" style="color:maroon">
            <br />
            Payment has been placed successfully! <br />
            <a asp-area="Admin"
            asp-controller="Order"
            asp-action="Datails"
            asp-route-orderId="@Model"
            class="btn btn-outline-primary">
                Back to order details</a>
        </div>

    </div>
</div>

