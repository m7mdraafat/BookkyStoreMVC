@model List<Company>

<div class="container">
    <div class="card card-header-pills border-0 rounded shadow-lg mt-5" style="padding:7%">
        <div class="card-header bg-white">
            <div class="row pt-2 m-2 justify-content-between align-items-center">
                <div class="col-6">
                    <h2 class="text-uppercase text-primary">
                        Company List
                    </h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Company" asp-action="Upsert" class="btn bg-gradient btn-primary input-shadow shadow-sm">
                        <i class="bi bi-plus-circle"></i> Add a New Company
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Display current page information -->
            <div class="row justify-content-between pt-2 m-2">
                <div id="pageInfo" class="col-6 mt-3 px-4">
                    Showing <span id="startIndex">0</span> to <span id="endIndex">0</span> of <span id="totalCompanies">0</span> companies
                </div>
                <div class="col-12 text-end col-md-3">
                    <input type="text" id="searchCompany" class="form-control me-sm-2 input-shadow text-dark" placeholder="Search companies..." />
                </div>
            </div>
            <div class="row pt-2 m-2 justify-content-start" id="companyContainer">
                <!-- Company cards will be populated here dynamically -->
            </div>
            <div id="paginationCompanyNumbers" class="pagination shadow-none bg-white justify-content-end mx-3">
                <!-- Pagination controls will be populated here dynamically -->
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/company.js"></script> <!-- Reference to your JavaScript file -->
}
