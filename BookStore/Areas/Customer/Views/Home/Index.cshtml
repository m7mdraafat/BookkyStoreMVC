@model List<Product>

<div class="container m-5 p-5 px-4">
    <!-- Product Cards -->
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-md-3 col-sm-6 border-primary">
                <div class="card h-100 border-white border-1 rounded-4 shadow-lg card-content">
                    <img src="@product.ImageUrl" class="card-img-top rounded-4 card-shadow" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="card-text">@product.Author</p>
                        <p class="card-text text text-decoration-line-through">@product.ListPrice EGP</p>
                        <p class="card-text text-danger">@product.Price100 EGP</p>
                        <button class="btn btn-outline-warning"><i class="bi bi-cart-plus"></i> Add to cart</button>
                        <br />
                        <a class="btn btn-outline-primary col-md-6 mt-2" asp-action="Details"
                            asp-route-productId="@product.Id" > <i class="bi bi-eye"></i> Details</a>

                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination Controls -->
    <div class="d-flex justify-content-between my-4">
        <button id="prevPage" class="btn btn-outline-secondary" disabled>
            <i class="bi bi-chevron-left"></i> Previous
        </button>
        <button id="nextPage" class="btn btn-outline-secondary">
            Next <i class="bi bi-chevron-right"></i>
        </button>
    </div>
</div>


